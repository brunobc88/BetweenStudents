{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="ui grid container pad">
        <div class="row">
            <div class="sixteen wide mobile fourteen wide tablet twelve wide computer centered column">
                <div class="ui segment">
                    <h3 class="ui dividing header">Réinitialisez votre mot de passe</h3>
                    {{ form_start(requestForm) }}
                    <div class="field">
                        {{ form_row(requestForm.email) }}
                    </div>
                    <p>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </p>
                    <div class="field">
                        <button class="ui button">Envoyer l'e-mail</button>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
