{% for commentaire in commentaires %}
    <div class="comment">
        <div class="avatar">
            {% if commentaire.auteur.urlImage %}
                {% if 'http' in commentaire.auteur.urlImage %}
                    <img src="{{ commentaire.auteur.urlImage }}" alt="avatar auteur">
                {% else %}
                    <img src="{{ asset('images/users/') ~ commentaire.auteur.urlImage }}" alt="avatar auteur">
                {% endif %}
            {% else %}
                <img src="{{ asset('images/divers/no-image-user.png') }}" alt="avatar auteur">
            {% endif %}
        </div>
        <div class="content">
            <a onclick="modalAfficherUser({{ commentaire.auteur.id }})" class="author">{{ commentaire.auteur.pseudo }}</a>
            <div class="metadata">
                <span class="date">{{ commentaire.date | date('d/m/Y Ã  H:i') }}</span>
            </div>
            <div class="text">
                {{ commentaire.texte }}
            </div>
        </div>
    </div>
    <!-- modal -->
    <div class="ui dimmer modals page transition hidden">
        {% set elementUser = commentaire.auteur %}
        {% include("inc/modal-user.html.twig") %}
    </div>
    <!-- modal -->
{% endfor %}
