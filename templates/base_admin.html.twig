<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}BetweenStudents{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/styles_admin.css') }}">
    {% block stylesheets %}{% endblock %}

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
</head>
<body>
<header>
    {% include("inc/navbar_admin.html.twig") %}
    {% include("inc/messageFlash.html.twig") %}
</header>

<div class="pusher">
    <div class="main-content">
        {% block body %}{% endblock %}
    </div>
</div>

<script>
    $(document).ready(function() {
        $('.ui.dropdown').dropdown();
        $('.sidebar-menu-toggler').on('click', function() {
            var target = $(this).data('target');
            $(target)
                .sidebar({
                    dinPage: true,
                    transition: 'overlay',
                    mobileTransition: 'overlay'
                })
                .sidebar('toggle');
        });
    });

    setTimeout(function(){
        $('.message.auto-close').closest('.message').transition('fade');
    }, 5000 );

    function removeMessage() {
        $('.message.manuel-close').remove();
    }
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
