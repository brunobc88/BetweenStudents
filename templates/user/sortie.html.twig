{% extends 'base.html.twig' %}

{% block title %}Mes sorties{% endblock %}

{% block body %}
    <div class="ui grid container pad">
        <div class="row">
            <div class="sixteen wide mobile fourteen wide tablet twelve wide computer centered column">
                <div class="ui segment">
                    <h3 class="ui dividing header">Mes sorties</h3>
                    {{ form_start(searchSortieUserFormType) }}
                    {{ form_row(searchSortieUserFormType.checkbox) }}
                    {{ form_end(searchSortieUserFormType) }}
                </div>
            </div>
        </div>
        {% include("inc/card-sortie.html.twig") %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.querySelectorAll('input[type="radio"]').forEach(input => {
            input.addEventListener("click", () => {
                event.target.form.submit();
            });
        });
    </script>
{% endblock %}
