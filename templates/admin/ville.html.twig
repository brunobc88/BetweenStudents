{% extends 'base_admin.html.twig' %}

{% block title %}Admin Ville{% endblock %}

{% block body %}
    <div class="ui grid padded">
        <div class="row">
            <div class="four wide column">
                <h2>Liste des villes</h2>({{ nbreResultats ? nbreResultats : 0 }} r√©sultats)
            </div>
        </div>
        <div class="four wide column">
            {{ form_start(searchVilleFormType) }}
            {{ form_widget(searchVilleFormType) }}
            {{ form_end(searchVilleFormType) }}
        </div>
    </div>
    <div class="ui grid stackable padded">
        <div class="column">
            <table class="ui celled striped table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Code Postal</th>
                    <th>Nombre total de sorties</th>
                </tr>
                </thead>
                <tbody>
                {% for ville in tableauVilles %}
                    <tr>
                        <td>{{ ville.id }}</td>
                        <td>{{ ville.nom }}</td>
                        <td>{{ ville.codePostal }}</td>
                        <td>{{ ville.sorties | length }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="ui grid padded">
        <div class="row">
            <div class="four wide column">
                {{ knp_pagination_render(tableauVilles) }}
            </div>
        </div>
    </div>
{% endblock %}
